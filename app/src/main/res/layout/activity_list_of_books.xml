<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aslan.schooltextbook.ListOfBooksActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/sortButton"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:text="Sort by"
            android:layout_height="@dimen/row_book_height"
            android:minHeight="@dimen/row_book_height"
            android:maxHeight="@dimen/row_book_height"
            />
        <Spinner
            android:layout_marginLeft="10dp"
            android:id="@+id/searchKeysSpinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/row_book_height"
            android:minHeight="@dimen/row_book_height"
            android:maxHeight="@dimen/row_book_height"
            android:layout_weight="0.70"
            >
        </Spinner>
    </LinearLayout>
    <ListView
        android:id="@+id/booksListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
